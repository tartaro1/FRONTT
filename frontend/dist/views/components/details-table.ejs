<div class="ventas">
    <% if (detailsOrders && detailsOrders.length> 0) { %> <%
            detailsOrders.forEach(detailOrder=> { %>
            <div class="row rounded shadow mt-3 img-product-report" style="
                width: 80%;
                align-items: center;
                border: 1px solid #000;
                ">
                <img width="100" height="100" src="<%= detailOrder.imagen %>" />
                <div class="" style="margin-left: 10px">
                    <div>
                        <span class="info-product p-1">
                            <%= detailOrder.NombreProducto %>
                        </span>
                        <span class="info-product p-1">Cantidad: <%= detailOrder.Cantidad %>
                                </span>
                    </div>
                    <div>
                        <span class="info-product p-1">Precio: <%= detailOrder.PrecioVenta
                                %></span>
                        <a href="ReportesIndividuales.html"><span
                                style="text-decoration: underline"
                                class="info-product p-1">Cadena: <%=
                                    detailOrder.nombre_proveedor %></span></a>
                    </div>
                </div>
            </div>
            <% }); %>
                <% } else { %>
                    <p>No se encontraron detalles de pedidos.</p>
                    <% } %>
</div>